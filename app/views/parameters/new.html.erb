<header>
  <div id="header">
    <div class="menu">
      <%= link_to "Home", "home", :method => 'get', class: "link" %>
      <% if Painting.where('users_id = ?', session[:user_id]).count > 0 %>
        <%= link_to "History", "/history/1", :method => 'get', class:"link"%>
      <% end %>
    </div>
    <div class="account">
      <%= link_to "Account", "account", :method => 'get', class:"link"%>
      <%= link_to "Log Out", "logout", :method => 'delete', class:"link"%>
    </div>
  </div>
</header>

<body>
  <div class="parameters">
    <div class="form">
      <center>
        <div class="generate">
          <h1>Painting Properties</h1>
          <%= form_for @parameter do |p|%>
            <p>
              <%= p.label "Number of Blacks" %>
              <%= p.number_field :nbRectBlack, in: 1..10, step: 1 %>
            </p>
            <p>
              <%= p.label "Number of Whites" %>
              <%= p.number_field :nbRectWhite, in: 0..10, step: 1 %>
            </p>
            <p>
              <%= p.label "Progressive option" %>
              <%= p.check_box :progressif %></p>
            <p>
              <%= p.submit "Generate", class: "btn-submit" %>
            </p>
          <% end %>
        </div>
      </center>
    </div>
  </div>
</body>
